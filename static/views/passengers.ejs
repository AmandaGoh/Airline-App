<% include partials/header.ejs %>

<h2>Passenger Details</h2>

<form method="post" action="/passengers">
  <div class="form-group">
    <label for="name">Name: </label>
    <input type="text" class="form-control" id="name" placeholder="Your Name" name= "newpassenger[name]">
  </div>
  <div class="form-group">
    <label for="number">Contact Number: </label>
    <input type="number" class="form-control" id="contactno" placeholder="Your Mobile Number" name= "newpassenger[contactno]">
  </div>
  <div class="form-group">
    <label for="email">Email: </label>
    <input type="email" class="form-control" id="email" placeholder="Your Email" name= "newpassenger[email]">
  </div>
  <div class="form-group">
    <label for="number">Membership Number: </label>
    <input type="number" class="form-control" id="membershipno" placeholder="Your Membership No" name= "newpassenger[membershipno]">
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
